pipeline {
    agent any
    stages {
        stage('DeployToStaging') {
            when {
                branch 'master'
            }
            steps {
                withCredentials([usernamePassword(credentialsId: 'webserver_login', usernameVariable: 'USERNAME', passwordVariable: 'USERPASS')]) {
                    sshPublisher(
                        failOnError: true,
                        continueOnError: false,
                        publishers: [
                            sshPublisherDesc(
                                configName: 'staging',
                                sshCredentials: [
                                    username: "$USERNAME",
                                    encryptedPassphrase: "$USERPASS"
                                ],
                                transfers: [
                                    sshTransfer(
                                    sh 'ssh coni@172.31.21.85'
                                        execCommand: 'ls / >> /tmp/mike.txt'
                                    )
                                ]
                            )
                        ]
                    )
                }
            }
        
        }
      }
    }
